<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="5dp"
    android:layout_margin="2dp"
    android:background="@drawable/background_rec">

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/TextBlackHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Номер коробки"
        android:id="@+id/box_name"
        />

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/box_name"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/box_item_linear_layout"
        android:orientation="vertical">
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>