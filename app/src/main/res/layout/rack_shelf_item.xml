<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="5dp"
    android:layout_margin="2dp"
    android:background="@drawable/background_rec">

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/TextBlackHeaderUnconstrained"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RackLetter"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="@+id/rack_item_arrow"
        app:layout_constraintBottom_toBottomOf="@id/rack_item_arrow"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/rack_item_letter"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/arrow_forward"
        android:id="@+id/rack_item_arrow"/>

</androidx.constraintlayout.widget.ConstraintLayout>