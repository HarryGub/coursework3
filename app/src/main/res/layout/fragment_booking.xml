<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mainactivity.booking.BookingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextBlackHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/frag_booking_header"
            android:text="Бронирование"/>

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextBlackUnconstrained"
            app:layout_constraintTop_toBottomOf="@+id/frag_booking_header"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="250dp"
            android:text="Название"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/frag_booking_name"
            android:gravity="center"
            android:maxWidth="300dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextBlackUnconstrained"
            app:layout_constraintTop_toBottomOf="@+id/frag_booking_name"
            android:layout_marginTop="10dp"
            android:text="Кол-во доступно"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/frag_booking_qua"
            android:gravity="center"
            android:maxWidth="300dp"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            style="@style/TextBlackUnconstrained"
            app:layout_constraintTop_toBottomOf="@+id/frag_booking_qua"
            android:layout_marginTop="20dp"
            android:hint="Введите количество"
            android:inputType="number"
            android:maxLines="1"
            android:id="@+id/frag_booking_qua_to_book"
            android:gravity="center"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ButtonPinkMain"
            android:text="Бронировать"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="120dp"
            android:layout_marginHorizontal="60dp"
            android:id="@+id/frag_booking_button"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</FrameLayout>